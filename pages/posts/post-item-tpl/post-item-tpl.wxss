.post-container {
  flex-direction: column;
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 0rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-line {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10px;
}

.post-line image {
  width: 60rpx;
  height: 60rpx;
}

.post-data {
  margin-left: 20px;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-image {
  width: 100%;
  margin-bottom: 15px;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin: 0 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-line .icon {
  height: 16px;
  width: 16px;
  margin-right: 8px;
}
.post-like text{
  font-size:13px;
    margin-right: 10px;
}